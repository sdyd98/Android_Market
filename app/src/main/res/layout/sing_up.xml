<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    // 회원가입
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/Sign_Up_Back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="105dp"
            />
    </LinearLayout>
    //밑줄
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        />

    // 아이디
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width = "250dp"
            android:layout_height = "wrap_content"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Sign_Up_Id"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:hint = "아이디"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_black"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="중복확인"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>


    // 비밀번호
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "15dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Sign_Up_Pw"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "비밀번호"
            />
    </com.google.android.material.textfield.TextInputLayout>
    // 비밀번호 확인
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "15dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Sign_Up_Pw2"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "비밀번호 확인"
            />
    </com.google.android.material.textfield.TextInputLayout>
    // 이름 입력
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "15dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Sign_Up_Name"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint = "이름 (실명 입력)"
            />
    </com.google.android.material.textfield.TextInputLayout>
    // 휴대전화번호 입력
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width = "250dp"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "15dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Sign_Up_Phone_Number"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:hint = "휴대전화번호('-'제외)"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="인증번호 전송"
            android:background="@drawable/btn_black"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>

    // 인증번호 입력
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Sign_Up_Certification"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:hint = "인증번호 입력"
                />
        </com.google.android.material.textfield.TextInputLayout>

    // 생년월일 입력
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width = "230dp"
            android:layout_height = "wrap_content"
            android:layout_gravity="center"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Sign_Birthday_Number"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:hint = "생년월일 (8자리 입력)"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남성"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여성"
                />



        </RadioGroup>

    </LinearLayout>

    //회원가입 버튼
    <Button
        android:id="@+id/btn_Sign_up_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="30dp"
        android:background="@drawable/btn_black"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        />

</LinearLayout>