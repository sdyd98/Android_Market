<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/Chat_Inside_Me_Message"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/Chat_Inside_Me_Icon"
        app:layout_constraintTop_toTopOf="@id/Chat_Inside_Me_Icon"
        app:layout_constraintRight_toLeftOf="@id/Chat_Inside_Me_Icon"
        android:background="@drawable/btn_pink_text"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:text="텍스트 내용"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:padding="3dp"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        />
    <ImageView
        android:id="@+id/Chat_Inside_Me_Icon"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_icon"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>