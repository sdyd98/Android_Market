<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/Buy_My_Item_List_Img"
        android:scaleType="centerCrop"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:src="@drawable/image"
        />

        <TextView
            android:id="@+id/Buy_My_Item_List_Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            app:layout_constraintLeft_toLeftOf="@id/Buy_My_Item_List_Img"
            app:layout_constraintRight_toRightOf="@id/Buy_My_Item_List_Img"
            app:layout_constraintBottom_toBottomOf="@id/Buy_My_Item_List_Img"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>