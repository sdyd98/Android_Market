<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/Sell_Back_Btn"
        android:clickable="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 등록하기"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/Sell_Image_Btn"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/sell3"
        android:onClick="photoDialogRadio"
        />

    </LinearLayout>

    <EditText
        android:id="@+id/Sell_Item_Name"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gray_text"
        android:hint="상품명 입력"
        android:textSize="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_gray_text"
        >
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/Sell_Item_Price"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_gray_text"
        android:hint="가격 입력"
        android:textSize="16dp"
        />

    <LinearLayout
        android:id="@+id/Sell_Location_Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_gray_text"
        >
        <TextView
            android:padding="10dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="거래할 지역 선택"
            android:textSize="16dp"
            android:background="@null"
            />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/map"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_gray_text"
        >
        <EditText
            android:id="@+id/Sell_Item_detail"
            android:padding="10dp"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:hint="상품정보를 입력해주세요"
            android:textSize="16dp"
            android:background="@null"
            />

    </LinearLayout>

    <Button
        android:id="@+id/Sell_Finish_Btn"
        android:onClick="Clear_Check"
        android:background="#fc5157"
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="상품 등록"
        />

</LinearLayout>