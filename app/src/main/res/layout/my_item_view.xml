<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            android:id="@+id/My_Item_view_Img"
            android:layout_marginLeft="20dp"
            android:layout_width="120dp"
            android:layout_height="95dp"
            android:src="@drawable/image"
            />

            <TextView
                app:layout_constraintTop_toTopOf="@id/My_Item_view_Img"
                app:layout_constraintLeft_toRightOf="@+id/My_Item_view_Img"
                android:id="@+id/My_Item_view_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                />

            <TextView
                app:layout_constraintLeft_toLeftOf="@+id/My_Item_view_Price"
                app:layout_constraintTop_toBottomOf="@id/My_Item_view_Price"
                android:id="@+id/My_Item_view_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품명"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/My_Item_view_heart"
                app:layout_constraintLeft_toLeftOf="@id/My_Item_view_Price"
                app:layout_constraintBottom_toBottomOf="@id/My_Item_view_Img"
                app:layout_constraintLeft_toRightOf="@id/My_Item_view_Img"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/heart2"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/My_Item_view_heart_num"
                app:layout_constraintTop_toTopOf="@id/My_Item_view_heart"
                app:layout_constraintBottom_toBottomOf="@id/My_Item_view_heart"
                app:layout_constraintLeft_toRightOf="@id/My_Item_view_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />

            <ImageView
                android:layout_marginLeft="12dp"
                android:id="@+id/My_Item_view_time"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/time"
                app:layout_constraintTop_toTopOf="@id/My_Item_view_heart_num"
                app:layout_constraintBottom_toBottomOf="@id/My_Item_view_heart_num"
                app:layout_constraintLeft_toRightOf="@id/My_Item_view_heart_num"
                />
            <TextView
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toBottomOf="@id/My_Item_view_time"
                app:layout_constraintTop_toTopOf="@id/My_Item_view_time"
                app:layout_constraintLeft_toRightOf="@id/My_Item_view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1분전"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>